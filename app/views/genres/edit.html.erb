<h1>Genres#edit</h1>
<p>Find me in app/views/genres/edit.html.erb</p>

<% if @genre.errors.any? %>
  <%= @genre.errors.count %>件のエラーが発生しました
  <ul>
    <% @genre.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @genre do |f| %>

  <h4>ジャンル名</h4>
  <%= f.text_field :name %>
  
  <%= f.submit '保存' %>

  <%= link_to "Destroy", genre_path(@genre.id), method: :delete, "data-confirm" => "Are you sure?" %>
  
<% end %>
