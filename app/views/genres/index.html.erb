<h1>Genres#index</h1>
<p>Find me in app/views/genres/index.html.erb</p>


 <h4>name</h4>
 <ul>
  <% @genres.each do |genre| %>
    <li><%= link_to genre.name, genre_path(genre) %></li>
  <% end %>
 <ul>

 <% if @genre.errors.any? %>
  <%= @genre.errors.count %>件のエラーが発生しました
  <ul>
    <% @genre.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @genre do |f| %>
  <h4>ジャンル名</h4>
  <%= f.text_field :name %>
	
  <%= f.submit '投稿' %>
<% end %>