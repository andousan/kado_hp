<h1>Genres#new</h1>
<p>Find me in app/views/genres/new.html.erb</p>

<% if @genre.errors.any? %>
  <%= @genre.errors.count %>件のエラーが発生しました
  <ul>
    <% @genre.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @genre do |f| %>
  <h4>ジャンル名</h4>
  <%= f.text_field :name %>
	
  <%= f.submit '投稿' %>
<% end %>