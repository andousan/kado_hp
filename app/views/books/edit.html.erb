<h1>Books#edit</h1>
<p>Find me in app/views/books/edit.html.erb</p>

<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: [@genre, @book] do |f| %>
  <h4>整理番号</h4>
  <%= f.text_field :number %>

  <h4>タイトル</h4>
  <%= f.text_field :title %>

  <h4>著者</h4>
  <%= f.text_field :author %>

  <h4>出版社</h4>
  <%= f.text_field :publisher %>

  <h4>購入日</h4>
  <%= f.text_field :date %>

  <h4>備考</h4>
  <%= f.text_field :note %>
	
  <%= f.submit '投稿' %>
<% end %>
