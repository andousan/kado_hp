<h1>Equipments#edit</h1>
<p>Find me in app/views/equipments/edit.html.erb</p>

<% if @equipment.errors.any? %>
  <%= @equipment.errors.count %>件のエラーが発生しました
  <ul>
    <% @equipment.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @equipment do |f| %>
  <h4>設備名</h4>
  <%= f.text_field :name %>

  <h4>詳細</h4>
  <%= f.text_field :detail %>	
  <%= f.submit '投稿' %>
<% end %>

<h3><%= link_to "Destroy", equipment_path(@equipment.id), method: :delete, "data-confirm" => "Are you sure?" %></h3>